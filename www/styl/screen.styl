@import prefixes
@import colors
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    #map
        position absolute
        top 0px
        left 0px
        bottom 0px
        width 100%
    .slider
        width 500px
        position absolute
        top 20px
        left 70px
        &.ui-slider
            border 1px solid #333
        .ui-slider-handle
            border 1px solid darken(HNBlue, 40%)
            background HNBlue
            transition background 0.5s
            &.ui-state-hover
                background darken(HNBlue, 20%)
            &.ui-state-active
                background darken(HNBlue, 40%)

